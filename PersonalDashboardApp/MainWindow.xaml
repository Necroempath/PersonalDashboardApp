<Window x:Class="PersonalDashboardApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalDashboardApp"
        xmlns:taskView="clr-namespace:PersonalDashboardApp.TaskModule.Views"
        xmlns:financeView="clr-namespace:PersonalDashboardApp.FinanceModule.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Title="MainWindow" Height="525" Width="950">

    <Grid>
        <TabControl>
            <TabItem Header="Tasks" Width="200">
                <taskView:TaskView x:Name="TaskViewControl" Margin="10" />
            </TabItem>
            <TabItem Header="Finance" Width="200">
                <financeView:FinanceView x:Name="FinanceViewControl" Margin="10"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>